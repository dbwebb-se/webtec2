---
// Component Script (JavaScript)

// Access passed-in component props, like `<X title="Hello, World" />`
interface Props {
  caption?: string
  className?: string
  src: string
}
const { caption, className, src } = Astro.props
---
<!-- Component Template (HTML + JS Expressions) -->

<figure class={className}>
  <img src={src} alt={caption}/>
  <figcaption>{caption}</figcaption>
</figure>

<style>
figure {
  display: inline-block;
  margin: 0;
  padding: 0.5em;
  border: 1px solid #ccc;
  margin-bottom: 1em;
}
img {
  max-width: 100%;
}
figcaption {
  caption-side: bottom;
  font-style: italic;
  text-align: center;
}
.right {
  float: right;
  margin-left: 1em;
}
.left {
  float: left;
  margin-right: 1em;
}
.border {
  border: 1px solid #999;
  padding: .5em;
  border-radius: 10px;
}
.shadow {
  box-shadow: 0.5rem 0.5rem #eee;
}
</style>